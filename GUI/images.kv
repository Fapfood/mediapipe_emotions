<ScreenManagement>:

    HomeScreen:
        id: name
        name: 'home'
        canvas.before:
            Color:
                rgb: (1, 1, 1, 1)
            Rectangle:
                pos:self.pos
                size:self.size

    SettingsScreen:
        id: settings
        name: 'settings'

    ViewScreen:
        id: view
        name: 'view'


<HomeScreen>
    FloatLayout:

        canvas:
            Color:
                rgb: (0.94, 0.96, 0.98, 1)
            Rectangle:
                size: (720,950)

        MDRaisedButton:
	        text: "START"
			font_size: 18
            size_hint: 0.15, 0.05
            pos_hint: {"x":0.09, "y":0.29}
            on_release:
                root.manager.current = 'settings'
                root.manager.ids.settings.func_abc(self) # example how to use class inside kv and Py

	    Label:
	        size_hint: (0.33, 0.16)
            text: 'Facial Emotion\nRecognition'
            bold: True
            color: 0.12,0.12,0.12,1
            font_size: 64
            pos_hint: {"x":0.07, "y":0.54}

        Label:
	        size_hint: (0.33, 0.07)
            text: 'Easy and simple detection of human feelings\nat a specific moment.'
            color: 0.38,0.38,0.38,1
            font_size: 22
            pos_hint: {"x":0.075, "y":0.46}

        Image:
            size_hint: (0.46, 0.7)
            pos_hint: {"x":0.51, "y":0.15}
		    source: 'images/hero.png'
			allow_stretch: True
			keep_ratio: True


